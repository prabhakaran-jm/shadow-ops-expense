# Shadow Ops – Backend configuration
# Copy to .env and fill in values

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Amazon Nova integration (placeholders – set when integrating)
# Inference: mock (deterministic) or real (Nova 2 Lite)
NOVA_MODE=mock

# Nova 2 Lite – inference / lightweight model
NOVA_2_LITE_API_KEY=
NOVA_2_LITE_REGION=us-east-1
NOVA_2_LITE_ENDPOINT=

# Nova Act – agent execution
NOVA_ACT_MODE=mock
NOVA_ACT_API_KEY=
NOVA_ACT_REGION=us-east-1
NOVA_ACT_ENDPOINT=
NOVA_ACT_STARTING_PAGE=https://expense.corp.example.com/dashboard
NOVA_ACT_HEADLESS=false

# Logging
LOG_LEVEL=INFO
